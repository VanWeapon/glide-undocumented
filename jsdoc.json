{
	"source": {
		"include": ["classes", "README.md"],
		"includePattern": ".js$"
	},

	"plugins": ["plugins/markdown"],

	"opts": {
		"encoding": "utf8",
		"readme": "./README.md",
		"destination": "docs/",
		"recurse": true,
		"verbose": true,
		"template": "./node_modules/clean-jsdoc-theme",
		"theme_opts": {
			"default_theme": "dark",
			"menu": [
				{
					"title": "GitHub",
					"link": "https://github.com/VanWeapon/glide-undocumented",
					"target": "_blank",
					"class": "some-class",
					"id": "some-id"
				},
				{
					"title": "Official SN API Docs",
					"link": "https://developer.servicenow.com/dev.do#!/reference/api/sandiego/server_legacy/",
					"target": "_blank",
					"class": "some-class",
					"id": "some-id"
				}
			],
			"sections": ["Classes"]
		}
	},
	"templates": {
		"cleverLinks": true
	},

	"markdown": {
		"hardwrap": false,
		"idInHeadings": true
	}
}
